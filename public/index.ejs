<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Monitoramento de Notícias</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        /* --- VARIÁVEIS DE COR PARA OS TEMAS --- */
        :root {
            --bg-color: #f4f7f9;
            --card-bg-color: #ffffff;
            --text-color: #2c3e50;
            --heading-color: #212529;
            --border-color: #e3e9ef;
            --accent-color: #007bff;
            --shadow-color: rgba(0,0,0,0.08);
            --timeline-line-color: #dbe2e8;
        }

        body.dark-mode {
            --bg-color: #1a1a2e;
            --card-bg-color: #16213e;
            --text-color: #e0e0e0;
            --heading-color: #ffffff;
            --border-color: #2a3b5a;
            --accent-color: #009ef7;
            --shadow-color: rgba(0,0,0,0.2);
            --timeline-line-color: #2a3b5a;
        }

        /* --- ESTILOS GERAIS --- */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            padding: 0 20px;
            transition: background-color 0.3s, color 0.3s;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 40px 0;
        }
        
        /* --- HEADER E FORMULÁRIO --- */
        .header {
            background-color: var(--card-bg-color);
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px var(--shadow-color);
            margin-bottom: 30px;
            transition: background-color 0.3s;
            position: relative;
        }
        
        .header h1 {
            color: var(--heading-color);
            font-size: 2em;
            margin: 0 0 20px 0;
        }

        form { display: flex;
            gap: 15px; flex-wrap: wrap; align-items: flex-end; }
        input[type="text"], input[type="date"] {
            padding: 12px;
            border: 1px solid var(--border-color);
            background-color: var(--bg-color);
            color: var(--text-color);
            border-radius: 8px;
            font-size: 1em;
            flex-grow: 1;
        }
        .search-button {
            background-color: var(--accent-color);
            color: white;
            border: none;
            cursor: pointer;
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 500;
            transition: background-color 0.2s;
        }
        .search-button:hover { background-color: #0056b3;
        }

        /* --- BOTÃO DARK MODE --- */
        .theme-toggle-btn {
            position: absolute;
            top: 20px;
            right: 30px;
            background: none;
            border: 1px solid var(--border-color);
            color: var(--text-color);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 18px;
        }
        
        /* --- ESTILOS DAS ABAS (TABS) --- */
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid var(--border-color);
        }
        .tab-btn {
            padding: 12px 20px;
            cursor: pointer;
            border: none;
            background-color: transparent;
            color: var(--text-color);
            font-size: 1.1em;
            font-weight: 500;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
            text-transform: capitalize;
        }
        .tab-btn.active {
            color: var(--accent-color);
            border-bottom-color: var(--accent-color);
        }
        .tab-content .tab-pane {
            display: none;
        }
        .tab-content .tab-pane.active {
            display: block;
        }


        /* --- ESTRUTURA DA TIMELINE --- */
        .timeline {
            position: relative;
            padding: 20px 0;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 3px;
            background-color: var(--timeline-line-color);
            transform: translateX(-50%);
        }

        .timeline-item {
            padding: 10px 40px;
            position: relative;
            width: 50%;
            opacity: 0; /* Inicia invisível para animação */
            transform: translateY(50px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }
        
        .timeline-item.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .timeline-item:nth-child(odd) { left: 0;
        }
        .timeline-item:nth-child(even) { left: 50%;
        }

        .timeline-item::after { /* Círculo na linha do tempo */
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            right: -8px;
            top: 32px;
            background-color: var(--card-bg-color);
            border: 3px solid var(--accent-color);
            border-radius: 50%;
            z-index: 1;
        }
        .timeline-item:nth-child(even)::after { left: -8px;
        }

        /* --- CARD DE NOTÍCIA NA TIMELINE --- */
        .news-card {
            padding: 20px;
            background-color: var(--card-bg-color);
            border-radius: 12px;
            box-shadow: 0 4px 15px var(--shadow-color);
            position: relative;
        }
        
        .news-card strong {
            font-size: 1.1em;
            color: var(--heading-color);
            display: block;
            margin-bottom: 10px;
        }
        .news-card .article-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        .news-card .article-meta {
            font-size: 0.85em;
            color: #888;
            margin-bottom: 10px;
        }
        .news-card p {
            font-size: 0.95em;
            line-height: 1.6;
        }
        .news-card a {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 500;
        }
        
        /* Adiciona a seta para fora do card */
        .news-card::before {
            content: '';
            position: absolute;
            top: 28px;
            width: 0;
            height: 0;
            border: 10px solid transparent;
        }
        .timeline-item:nth-child(odd) .news-card::before {
            right: -20px;
            border-left-color: var(--card-bg-color);
        }
        .timeline-item:nth-child(even) .news-card::before {
            left: -20px;
            border-right-color: var(--card-bg-color);
        }

        /* --- BOTÃO WHATSAPP FLUTUANTE --- */
        .floating-whatsapp-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #25D366;
            border: none;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            cursor: pointer;
            z-index: 1000;
            display: flex; align-items: center; justify-content: center;
            transition: transform 0.2s ease-in-out;
        }
        .floating-whatsapp-btn:hover { transform: scale(1.1);
        }
    </style>
</head>
<body>

    <div class="container" id="news-container">
        <header class="header">
            <h1>Painel de Monitoramento</h1>
            <form action="/" method="GET" id="search-form">
                <input type="text" name="topic" placeholder="Digite um tópico adicional..." value="<%= query.topic || '' %>" style="flex: 2;">
                <input type="date" name="startDate" placeholder="Data Inicial" value="<%= query.startDate || '' %>" style="flex: 1;">
                <input type="date" name="endDate" placeholder="Data Final" value="<%= query.endDate || '' %>" style="flex: 1;">
                
                <button type="submit" class="search-button"><i class="fas fa-search"></i> Consultar</button>
                <button type="button" id="expand-search-btn" class="search-button" style="background-color: #6c757d; border-color: #6c757d;">Ampliar Pesquisa</button>
            </form>
            <button class="theme-toggle-btn" id="theme-toggle" aria-label="Alterar Tema">
                <i class="fas fa-moon"></i>
            </button>
        </header>

        <% if (typeof topics !== 'undefined' && topics.length > 0 && topics.some(t => articlesByTopic[t] && articlesByTopic[t].length > 0)) { %>
            <div class="tabs">
                <% topics.forEach((topic, index) => { %>
                    <button class="tab-btn <%= index === 0 ? 'active' : '' %>" data-tab-target="#tab-<%= topic.replace(/\s+/g, '-') %>">
                        <%= topic %>
                    </button>
                <% }) %>
            </div>

            <div class="tab-content">
                <% topics.forEach((topic, index) => { %>
                    <div class="tab-pane <%= index === 0 ? 'active' : '' %>" id="tab-<%= topic.replace(/\s+/g, '-') %>">
                        <% const articles = articlesByTopic[topic]; %>
                        <% if (articles && articles.length > 0) { %>
                            <div class="timeline">
                                <% articles.forEach(a => { %>
                                    <div class="timeline-item">
                                        <div class="news-card" data-title="<%= a.title %>" data-link="<%= a.link %>" data-topic="<%= a.topic %>">
                                            <input type="checkbox" name="selectedArticles" value="<%= a.link %>" style="position: absolute; top: 15px; right: 15px;">
                                            <% if (a.image) { %>
                                               <img src="<%= a.image %>" alt="Imagem da matéria" class="article-image" onerror="this.style.display='none'">
                                            <% } %>
                                            <strong><%= a.title %></strong>
                                            <div class="article-meta">
                                               <em>Fonte:</em> <%= a.source %> | <em>Data:</em> <%= new Date(a.pubDate).toLocaleDateString('pt-BR') %>
                                            </div>
                                            <p><%= a.description.substring(0, 150) %>...</p> 
                                            <a href="<%= a.link %>" target="_blank">Leia mais</a>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                             <p style="text-align: center;">Nenhuma notícia encontrada para este tópico ou filtro.</p>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        <% } else if (typeof query !== 'undefined' && (query.topic || query.startDate || query.endDate)) { %>
            <p style="text-align: center;">Nenhuma notícia encontrada para os tópicos e filtros consultados.</p>
        <% } else { %>
            <p style="text-align: center;">O sistema está pronto. Pesquise um tópico adicional ou filtre por data para começar.</p>
        <% } %>
    </div>

    <% if (typeof topics !== 'undefined' && topics.length > 0 && topics.some(t => articlesByTopic[t] && articlesByTopic[t].length > 0)) { %>
        <button type="button" onclick="copyToWhatsapp()" class="floating-whatsapp-btn" aria-label="Copiar Seleção para WhatsApp">
            <i class="fab fa-whatsapp" style="font-size: 28px; color: white;"></i>
        </button>
    <% } %>

    <script>
        // --- SCRIPTS DA PÁGINA ---

        // 1. Lógica do Dark Mode
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;
        const themeIcon = themeToggle.querySelector('i');

        if (localStorage.getItem('theme') === 'dark') {
            body.classList.add('dark-mode');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            } else {
                localStorage.setItem('theme', 'light');
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
        });

        // 2. Lógica da Animação da Timeline ao Rolar
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.timeline-item').forEach(item => {
            observer.observe(item);
        });

        // 3. Lógica das Abas (Tabs)
        const tabButtons = document.querySelectorAll('.tab-btn');
        const tabPanes = document.querySelectorAll('.tab-pane');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                tabButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                tabPanes.forEach(pane => pane.classList.remove('active'));
                document.querySelector(button.dataset.tabTarget).classList.add('active');
            });
        });

        // 4. Lógica para o botão "Ampliar Pesquisa"
        document.getElementById('expand-search-btn').addEventListener('click', function() {
            const form = document.getElementById('search-form');
            
            let searchTypeInput = form.querySelector('input[name="searchType"]');
            if (!searchTypeInput) {
                searchTypeInput = document.createElement('input');
                searchTypeInput.type = 'hidden';
                searchTypeInput.name = 'searchType';
                form.appendChild(searchTypeInput);
            }
            searchTypeInput.value = 'expanded';
            
            form.submit();
        });

        // 5. Função para copiar para o WhatsApp
        function copyToWhatsapp() {
            const newsContainer = document.getElementById('news-container');
            const checkedBoxes = newsContainer.querySelectorAll('input[name="selectedArticles"]:checked');
            
            if (checkedBoxes.length === 0) {
                alert('Por favor, selecione ao menos uma notícia para copiar.');
                return;
            }

            const articlesByTopic = {};
            checkedBoxes.forEach(checkbox => {
                const card = checkbox.closest('.news-card');
                const topic = card.dataset.topic;
                const article = {
                    title: card.dataset.title.trim(),
                    link: card.dataset.link
                };
                if (!articlesByTopic[topic]) {
                    articlesByTopic[topic] = [];
                }
                articlesByTopic[topic].push(article);
            });

            const now = new Date();
            let greeting;
            const hour = now.getHours();
            if (hour >= 5 && hour < 12) greeting = "Bom dia!";
            else if (hour >= 12 && hour < 18) greeting = "Boa tarde!";
            else greeting = "Boa noite!";
            const dateString = now.toLocaleDateString('pt-BR', { day: 'numeric', month: 'long', weekday: 'long' });
            
            let whatsappText = `${greeting} ${dateString}.\n\nAqui estão os principais assuntos para você começar o dia bem-informado.\n\n`;
            
            const topicHeaders = {
                'política': '📰 POLÍTICA:',
                'economia': '💵 ECONOMIA:',
                'mundo': '🌍 MUNDO:'
            };
            
            const topicOrder = ['política', 'economia', 'mundo'];
            Object.keys(articlesByTopic).forEach(topic => {
                if (!topicOrder.includes(topic.toLowerCase())) {
                    topicOrder.push(topic);
                }
            });

            topicOrder.forEach(topic => {
                if (articlesByTopic[topic]) {
                    const header = topicHeaders[topic.toLowerCase()] || `📰 ${topic.toUpperCase()}:`;
                    whatsappText += `${header}\n\n`;
                    
                    articlesByTopic[topic].forEach(article => {
                        whatsappText += `🔹 ${article.title}\n`;
                        whatsappText += `Leia mais: ${article.link}\n\n`;
                    });
                }
            });

            whatsappText += "Escrito por: ";

            navigator.clipboard.writeText(whatsappText.trim())
                .then(() => alert(`Notícias copiadas! O texto formatado está pronto para colar no WhatsApp.`))
                .catch(err => alert('Ocorreu um erro ao tentar copiar as notícias.'));
        }
    </script>
</body>
</html>